<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cvbuilder.HomeController">
    <VBox spacing="20"
          alignment="CENTER"
          prefWidth="400"
          prefHeight="200"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">
        <Label text="CV BUILDER"
               style="-fx-font-size: 32px; -fx-font-weight: bold;" />
        <Label text="Create your professional CV in minutes"
               style="-fx-font-size: 16px; -fx-text-fill: #555;" />
        <Button text="Get Started"
                onAction="#gotoForm"
                prefHeight="45"
                prefWidth="140"
                style="-fx-font-size: 16px;
                       -fx-background-color: #4A90E2;
                       -fx-background-radius: 8;
                       -fx-text-fill: white;" />
    </VBox>

</AnchorPane>
