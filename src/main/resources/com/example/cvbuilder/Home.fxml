<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane prefHeight="600" prefWidth="900"
            stylesheets="@home.css"
            styleClass="home-root"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cvbuilder.HomeController">
    <VBox spacing="20"
          alignment="CENTER"
          prefWidth="400"
          prefHeight="200"
          styleClass="home-center"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">
        <Label text="CV BUILDER"
               styleClass="title-label" />
        <Label text="Create your professional CV in minutes"
               styleClass="subtitle-label" />
        <Button text="Get Started"
                onAction="#gotoForm"
                prefHeight="45"
                prefWidth="140"
                styleClass="primary-button" />
        <Label text="Saved CVs" styleClass="subtitle-label" />
        <ScrollPane fitToWidth="true" prefViewportHeight="240" prefViewportWidth="700">
            <TilePane fx:id="thumbnailsPane" hgap="12" vgap="12" prefColumns="3" stylesheets="@home.css" />
        </ScrollPane>

    </VBox>

</AnchorPane>
